<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="210dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="10dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:cardCornerRadius="7dp">

        <ImageView
            android:id="@+id/raw_popular_main_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="@string/st"
            android:src="@color/colorNav"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/raw_popular_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movie Title"
        android:ellipsize="marquee"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:singleLine="true" />

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RatingBar
            android:layout_marginStart="2dp"
            android:id="@+id/raw_popular_main_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_gravity="center_vertical"
            android:progressBackgroundTint="@color/colorRating"
            android:progressTint="@android:color/holo_orange_light"
            android:rating="3" />

        <TextView
            android:id="@+id/raw_popular_main_rating_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5.7"
            android:textAlignment="center"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:textColor="@android:color/holo_orange_light"
            tools:ignore="RtlCompat" />
    </LinearLayout>




</LinearLayout>